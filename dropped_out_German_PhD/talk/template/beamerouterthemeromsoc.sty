    \hspace{1ex}
    \usebeamerfont{information in head/foot}\insert@footinfo\hfill
    \begin{minipage}{0.5cm}
%     \vspace{-1.25\baselineskip}
    \settowidth{\pagenumberwidtha}{\insertframenumber{}}% \textcolor{romsocblue}{\textbf{/}} \inserttotalframenumber}
%     \textcolor{romsocblue}{\rule{\pagenumberwidtha}{1pt}} \par
    \vspace{-1.0\baselineskip}
    \usebeamerfont{page number in head/foot}\insertframenumber{}% \textcolor{romsocblue}{\textbf{/}} \inserttotalframenumber\hspace*{2ex} \par
%     \textcolor{romsocblue}{\rule{\pagenumberwidtha}{1pt}}
    \end{minipage}
  \end{beamercolorbox}}%
  \vskip0pt%
}

