% We do not allow for frame subtitles
\defbeamertemplate{frametitle}{romsoc frametitle}
{
   \nointerlineskip%
   % compute width:
   \@tempdima=\textwidth%
   \advance\@tempdima by\beamer@leftmargin%
   \advance\@tempdima by\beamer@rightmargin%
%   \advance\@tempdima by -2cm%
%   \hfill
   \settowidth{\titlewidth}{\insertframetitle}
   \settowidth{\logowidth}{\pgfuseimage{romsocLogoImage}}
   \begin{beamercolorbox}[wd=\the\@tempdima,rightskip=1ex,ht=2.4ex,dp=0.75ex]{frametitle}
     % insert logo
     \hspace{4mm}%
     \begin{minipage}[b][3ex][c]{\logowidth}\vspace{7mm}\pgfuseimage{romsocLogoImage}\end{minipage}%
     % insert title
     \hfill%
     \begin{minipage}[t][2ex][c]{1.1\titlewidth}
 	\vspace{-11pt}
      \setbeamerfont{frametitle}{series=\bfseries,size=\normalsize,parent=structure}
      \usebeamerfont{frametitle} \insertframetitle \par
     \end{minipage}%
     \hfill%
%     \begin{minipage}[t][2ex][c]{1.75cm}\vspace{-3mm}\includegraphics[width = 0.6cm]{fulogo.pdf}~\includegraphics[width = 0.75cm]{tulogo.pdf}\end{minipage}%
%         \begin{minipage}[t][2ex][c]{1.75cm}\vspace{-3mm}\includegraphics[width = 1.75cm]{logos/tulogo.pdf}\end{minipage}%
   \end{beamercolorbox}~\par
   \vspace{-9.0mm}
   \hskip4ex
   \usebeamercolor[fg]{separation line}\rule[0.25ex]{0.92\textwidth}{.03cm}%
   \vskip-0.75\baselineskip
}

